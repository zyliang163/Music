             </view>
             <view class='del'><image src='/images/del.png'></image></view>
          </view>
        </view>
      </view>
      <view class='song-item'>
        <view class='song-left'>
        <image src='/images/mm.jpg'></image>
        </view>
        <view class='song-right'>
          <text>甜甜</text>
          <view class='star'>
            <image src='/images/star.png'></image>
            <image src='/images/star.png'></image>
            <image src='/images/star.png'></image>
            <image src='/images/star.png'></image>
          </view>
          <view class='song-info'>
             <view class='title-face'>
              <view class='face'><image src='/images/gs3.jpg'></image></view>
              <view class='album'>周杰伦</view>
             </view>
             <view class='del'><image src='/images/del.png'></image></view>
          </view>
        </view>
      </view>
    </view>
    </scroll-view>
  </view>
  <!--player  -->
  <view class='player'>
    <view class='p-left'>
      <view  class='p-player'><image src='/images/gs1.jpg'></image></view>
      <view class='p-info'>
        <view class='p-title'>敞开心扉听老歌</view>
        <view class='p-control'>左右滑动换节目</view>
      </view>
    </view>
    <view class='p-right'>
      <image class='p-start' src='/images/play.png'></image>
      <image class='plist' src='/images/slist.png'></image>
    </view>
  </view>
</view>