<!--index.wxml-->
<view class="root-m">
  <view class='search'>
    <view class='search-left'>
      <icon type="search"  size='20' color="#ccc"/>
      <input placeholder='影子爱人' type='text'></input>
    </view>
    <view class='search-right'>
      <view class='clock'>
        <view class='clock-img'><icon color='#e8e8e8' type='waiting' size='22'></icon></view>
        <view class='clock-text'>定时</view>
      </view>
      <view class='down'>
        <view class='down-img'><icon color='#e8e8e8' type='download' size='22'></icon></view>
        <view class='down-text'>下载</view>
      </view>
    </view>
  </view>
  <!--导航  -->
  <view class='nav'>
    <view>
      <text class='active'>推荐</text>
    </view>
    <view>
      <text>精选</text>
    </view>
    <view>
      <text>分类</text>
    </view>
    <view>
       <text>广播</text>
    </view>
    <view>
       <text>我的</text>
    </view>
  </view>
  <!--内容  -->
  <view class='content'>
  <!--滑块  -->
    <view class='swip'>
      <swiper autoplay circular vertical interval='3000' indicator-dots indicator-color='#fff' indicator-active-color='#ecb171'>
        <swiper-item><image src='/images/t1.png' class='slide-image'/></swiper-item>
        <swiper-item><image src='/images/t2.png' class='slide-image'/></swiper-item>
        <swiper-item><image src='/images/t3.png' class='slide-image'/></swiper-item>
        <swiper-item><image src='/images/t4.png' class='slide-image'/></swiper-item>
      </swiper>
    </view>
    <!--分类  -->
    <view class='cate'>
      <view class='item'>
        <view class='cate-img'><image src='/images/book.png' /></view>
        <view class='cate-title'>小说</view>
      </view>
       <view class='item'>
        <view class='cate-img'><image src='/images/love.png' /></view>
        <view class='cate-title'>情感</view>
      </view>
       <view class='item'>
        <view class='cate-img'><image src='/images/music.png' /></view>
        <view class='cate-title'>音乐</view>
      </view>
       <view class='item'>
        <view class='cate-img'><image src='/images/knowledge.png' /></view>
        <view class='cate-title'>知识</view>
      </view>
       <view class='item'>
        <view class='cate-img'><image src='/images/liveradio.png' /></view>
        <view class='cate-title'>直播</view>
      </view>
       <view class='item'>
        <view class='cate-img'><image src='/images/list.png' /></view>
